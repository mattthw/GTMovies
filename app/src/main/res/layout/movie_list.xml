<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas
    .android.com/tools"
    android:theme="@style/AppTheme.NoActionBar"
    android:id="@+id/movie_list"
    android:background="@color/cardview_dark_background"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.RecyclerView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/movie_list_view"
        android:name="com.team19.gtmovies.MovieListFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_below="@id/scroll_layout"
        android:clipToPadding="false"
        android:contentDescription="@string/recycler_view"
        app:layoutManager="LinearLayoutManager"
        tools:context=".activity.MovieListActivity"
        tools:listitem="@layout/movie_list_content"/>

    <android.support.v4.widget.NestedScrollView
        android:id="@+id/movie_detail_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/app_bar"
        app:layout_behavior="@string/appbar_scrolling_view_behavior" />

</RelativeLayout>