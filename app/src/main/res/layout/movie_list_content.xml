<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:theme="@style/AppTheme.NoActionBar"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="140dp"
    android:layout_gravity="center"
    android:layout_marginTop="4dp"
    android:layout_marginBottom="4dp"
    android:layout_below="@id/scroll_tabs"
    card_view:cardCornerRadius="3dp">

    <com.android.volley.toolbox.NetworkImageView
        android:contentDescription="@string/default_movie_title"
        android:id="@+id/movie_poster"
        android:layout_width="100dp"
        android:layout_height="match_parent"
        android:paddingEnd="5dp"/>
        <!--android:background="@mipmap/ic_launcher"-->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="28dp"
        android:layout_marginStart="102dp"
        android:layout_marginTop="8dp"
        android:orientation="horizontal"
        android:focusable="true"
        android:outlineProvider="paddedBounds">
        <TextView
            android:id="@+id/movie_title"
            android:text="@string/default_movie_title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:maxWidth="218dp"
            android:textSize="22sp"
            android:textColor="@android:color/black"
            android:singleLine="true"
            android:layout_gravity="bottom|start"
            android:gravity="bottom|start"
            android:foregroundGravity="bottom|left"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"/>
        <TextView
            android:id="@+id/movie_rating"
            android:text="@string/dummy_movie_rating"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="bottom|end"
            android:gravity="bottom|end"
            android:foregroundGravity="bottom|right"
            android:singleLine="true"
            android:paddingBottom="4dp"
            android:layout_alignParentEnd="true" />
    </RelativeLayout>

    <TextView
        android:id="@+id/movie_description"
        android:text="@string/dummy_movie_description"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="5dp"
        android:layout_marginStart="102dp"
        android:layout_marginTop="38dp"
        android:layout_marginBottom="10dp" />



</android.support.v7.widget.CardView>
