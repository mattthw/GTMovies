<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.team19.gtmovies.UserProfileActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Edit your profile here:"
        android:id="@+id/textViewUserProfileTitle"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Username:"
        android:id="@+id/textViewUserProfileUsername"
        android:layout_below="@+id/textViewUserProfileTitle"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editTextUserProfileUsername"
        android:layout_below="@+id/textViewUserProfileUsername"
        android:layout_alignParentStart="true"
        android:layout_marginStart="31dp"
        android:ems="13" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Name:"
        android:id="@+id/textViewUserProfileName"
        android:layout_below="@+id/editTextUserProfileUsername"
        android:layout_alignParentStart="true"
        android:layout_marginTop="5dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editTextUserProfileName"
        android:layout_below="@+id/textViewUserProfileName"
        android:layout_alignStart="@+id/editTextUserProfileUsername"
        android:ems="13"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Password:"
        android:id="@+id/textViewUserProfilePassword"
        android:layout_below="@+id/editTextUserProfileName"
        android:layout_alignParentStart="true"
        android:layout_marginTop="5dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editTextUserProfilePassword"
        android:layout_below="@+id/textViewUserProfilePassword"
        android:layout_alignStart="@+id/editTextUserProfileName"
        android:ems="13"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Create/Save Profile"
        android:id="@+id/buttonUserProfileSubmit"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/textViewUserProfileTitle" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="User Bio:"
        android:id="@+id/textViewUserProfileBio"
        android:layout_below="@+id/editTextUserProfilePassword"
        android:layout_alignParentStart="true"
        android:layout_marginTop="5dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:ems="13"
        android:id="@+id/editText"
        android:layout_below="@+id/textViewUserProfileBio"
        android:layout_alignStart="@+id/editTextUserProfilePassword"
        android:lines="6"/>
</RelativeLayout>
