<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:fillViewport="true"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".activity.UserProfileActivity"
    android:id="@+id/userProfileRootView">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Edit your profile here:"
        android:id="@+id/textViewUserProfileTitle"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/scrollView"
        android:layout_above="@+id/buttonUserProfileSubmit"
        android:layout_below="@+id/textViewUserProfileTitle"
        android:fillViewport="true"
        android:layout_alignParentLeft="true">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/buttonUserProfileSubmit"
            android:nestedScrollingEnabled="true"
            android:requiresFadingEdge="vertical"
            android:layout_below="@+id/textViewUserProfileTitle">

            <!--prevent other things from being focus on at startup-->
            <!--<LinearLayout-->
                <!--android:focusable="true"-->
                <!--android:focusableInTouchMode="true"-->
                <!--android:layout_width="0px"-->
                <!--android:layout_height="0px"/>-->

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Username:"
                android:id="@+id/textViewUserProfileUsername"
                android:layout_marginTop="20dp" />
            <!--android:layout_below="@+id/textViewUserProfileTitle"-->
            <!--android:layout_alignParentStart="true"-->

            <EditText
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:id="@+id/editTextUserProfileUsername"
                android:ems="13"
                android:maxLines="1"
                android:singleLine="true"
                android:layout_marginLeft="30dp"/>
            <!--android:layout_below="@+id/textViewUserProfileUsername"-->
            <!--android:layout_alignParentStart="true"-->

            <!-- <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Password:"
                android:id="@+id/textViewUserProfilePassword"
                android:layout_marginTop="5dp" /> -->

            <EditText
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:id="@+id/editTextUserProfilePassword"
                android:ems="13"
                android:inputType="textVisiblePassword"
                android:layout_marginLeft="30dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Name:"
                android:inputType="textCapWords"
                android:id="@+id/textViewUserProfileName"
                android:layout_marginTop="5dp" />
            <!--android:layout_below="@+id/editTextUserProfileUsername"-->
            <!--android:layout_alignParentStart="true"-->

            <EditText
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:id="@+id/editTextUserProfileName"
                android:ems="13"
                android:layout_gravity="center_vertical"
                android:inputType="textPersonName"
                android:layout_marginLeft="30dp" />
            <!--android:layout_below="@+id/textViewUserProfileName"-->
            <!--android:layout_alignStart="@+id/editTextUserProfileUsername"-->

            <!--android:layout_below="@+id/editTextUserProfileUsername"-->
            <!--android:layout_alignParentStart="true"-->

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:paddingBottom="5dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="Major:"
                    android:id="@+id/textViewUserProfileMajor"
                    android:layout_marginTop="5dp" />

                <Spinner
                    android:layout_width="270dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/spinnerProfileMajor"
                    android:entries="@array/profMajors"
                    android:layout_marginTop="30dp"/>

            </LinearLayout>

            <EditText
                android:layout_width="250dp"
                android:visibility="gone"
                android:layout_height="wrap_content"
                android:id="@+id/editTextUserProfileMajor"
                android:ems="13"
                android:layout_gravity="center_vertical"
                android:inputType="textPersonName"
                android:layout_marginLeft="30dp" />
            <!--android:layout_below="@+id/textViewUserProfileName"-->
            <!--android:layout_alignStart="@+id/editTextUserProfileUsername"-->

            <!--android:layout_below="@+id/editTextUserProfileName"-->
            <!--android:layout_alignParentStart="true"-->

            <!--android:layout_below="@+id/textViewUserProfilePassword"-->
            <!--android:layout_alignStart="@+id/editTextUserProfileName"-->

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="User Bio:"
                android:id="@+id/textViewUserProfileBio"
                android:layout_marginTop="5dp" />
            <!--android:layout_below="@+id/editTextUserProfilePassword"-->
            <!--android:layout_alignParentStart="true"-->

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textMultiLine"
                android:ems="13"
                android:id="@+id/editTextUserProfileBio"
                android:lines="4"
                android:layout_marginLeft="30dp"
                android:nestedScrollingEnabled="false"
                android:textAlignment="textStart"
                android:textStyle="normal" />
            <!--android:layout_below="@+id/textViewUserProfileBio"-->
            <!--android:layout_alignStart="@+id/editTextUserProfilePassword"-->

        </LinearLayout>
    </ScrollView>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save Profile"
        android:id="@+id/buttonUserProfileSubmit"
        android:layout_gravity="center_horizontal"
        android:layout_alignParentTop="false"
        android:layout_centerHorizontal="true"
        android:layout_alignParentStart="false"
        android:layout_alignParentEnd="false"
        android:layout_alignParentBottom="true" />


</RelativeLayout>
