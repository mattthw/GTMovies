<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_main"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".activity.MainActivity"
    tools:showIn="@layout/app_bar_main">

    <ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/main_view2"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:orientation="vertical">
            <ScrollView
                android:id="@+id/main_view2_inner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <!--<com.team19.gtmovies.activity.CriteriaActivity
                    android:id="@+id/criteria_bar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone"/>-->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:id="@+id/criteria_bar"
                    android:layout_marginTop="12dp"
                    android:layout_marginBottom="8dp"
                    android:layout_gravity="center"
                    android:animateLayoutChanges="true">
                    <RelativeLayout
                        xmlns:android="http://schemas.android.com/apk/res/android"
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="32dp"
                        android:layout_marginStart="19dp"
                        android:layout_marginEnd="19dp"
                        android:paddingStart="12dp"
                        android:paddingEnd="12dp"
                        android:background="@drawable/chip_shape"
                        android:backgroundTint="?attr/colorPrimary">

                        <TextView
                            android:id="@+id/chip_text_view_1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:singleLine="true"
                            android:layout_centerInParent="true"
                            android:textColor="#FFFFFF"
                            android:textSize="14sp"
                            android:text="MAJOR"/>
                    </RelativeLayout>
                    <RelativeLayout
                        xmlns:android="http://schemas.android.com/apk/res/android"
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="32dp"
                        android:layout_marginStart="19dp"
                        android:layout_marginEnd="19dp"
                        android:paddingStart="12dp"
                        android:paddingEnd="12dp"
                        android:background="@drawable/chip_shape"
                        android:backgroundTint="?attr/colorPrimary">

                        <TextView
                            android:id="@+id/chip_text_view_2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:singleLine="true"
                            android:layout_centerInParent="true"
                            android:textColor="#FFFFFF"
                            android:textSize="14sp"
                            android:text="GENRE"/>
                    </RelativeLayout>
                    <RelativeLayout
                        xmlns:android="http://schemas.android.com/apk/res/android"
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="32dp"
                        android:layout_marginStart="19dp"
                        android:layout_marginEnd="19dp"
                        android:paddingStart="12dp"
                        android:paddingEnd="12dp"
                        android:background="@drawable/chip_shape"
                        android:backgroundTint="?attr/colorPrimary">

                        <TextView
                            android:id="@+id/chip_text_view_3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:singleLine="true"
                            android:layout_centerInParent="true"
                            android:textColor="#FFFFFF"
                            android:textSize="14sp"
                            android:text="RATING"/>
                    </RelativeLayout>
                </LinearLayout>
            </ScrollView>


            <android.support.v4.view.ViewPager
                android:id="@+id/view_pager"
                android:layout_width="match_parent"
                android:layout_height="512dp">
                <FrameLayout
                    android:id="@+id/main_frame_layout"
                    android:layout_width="match_parent"
                    android:layout_height="fill_parent"/>
            </android.support.v4.view.ViewPager>
        </LinearLayout>

    </ScrollView>
</RelativeLayout>


